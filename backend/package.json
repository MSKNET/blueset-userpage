{
  "name": "backend",
  "version": "0.0.1",
  "description": "Backend for Eanaâ€™d user page",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build": "npm run tslint && rm -rf dist && npm run build-ts",
    "build-ts": "tsc",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Static\" -c \"cyan.bold,green.bold,blue.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run copy-assets\"",
    "start": "npm run serve",
    "copy-assets": "cpx \"src/**/*.{yaml,json}\" \"dist\" --watch --verbose"
  },
  "author": "Eana Hufwe",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuanlc/typescript-expressjs-template.git"
  },
  "dependencies": {
    "express": "^4.17.1",
    "yaml": "^1.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/yaml": "^1.2.0",
    "concurrently": "^4.1.0",
    "cpx": "^1.5.0",
    "nodemon": "^1.19.1",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
